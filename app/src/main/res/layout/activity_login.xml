<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#213458">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="50px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Login"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10px"
                    android:background="#ffffff"></View>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/imagefive" />

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/corner_circle"
                        android:drawableStart="@drawable/ic_baseline_mail_outline_24"
                        android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
                        android:hint=" 이메일"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff" />

                    <EditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner_circle"
                        android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                        android:hint=" 비밀번호"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/signUpButton"
                            android:layout_width="177dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/corner_circle_whtie"
                            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                            android:text="      Sign Up"
                            android:textAlignment="textStart"
                            android:textColor="#213458"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="6dp"
                            android:layout_height="match_parent"
                            android:background="#00000000"></View>

                        <Button
                            android:id="@+id/loginButton"
                            android:layout_width="177dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/corner_circle_pink2"
                            android:gravity="center_vertical|left"
                            android:hint="             Login"
                            android:textColor="#213458"
                            android:textColorHint="#213458"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/user"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:text="Remember"
                            android:textColor="#ffffff" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#ffffff"></View>

                        <RadioButton
                            android:id="@+id/rg_btn2"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:text="admin"
                            android:textColor="#ffffff" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="top"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/login_btn_naver" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/login_btn_kakao" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/login_btn_google" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
